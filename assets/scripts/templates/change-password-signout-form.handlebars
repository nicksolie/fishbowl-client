<!-- handebar for right section's post-login actions -->
<section class="form-group change-password-signout-form">

  <!-- Change passord form -->
  <legend>Change Password</legend>
  <form id="change-password">
    <div class="form-group">
      <input type="password" class="form-control" name="passwords[old]" placeholder="Old Password" class="form-control">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="passwords[new]" placeholder="New Password" class="form-control">
    </div>
    <input type="submit" value="Change Password" class="btn">
  </form>
  <br>
  <form id="sign-out">
    <input type="submit" value="Sign Out" class="btn">
  </form>
</section>

<!-- Generate words form -->
<section class="form-group">
  <label>Enter Your Words below!</label>
  <form id="word1" class="form-inline">
    <div class="form-group">
      <input type="text" name="word[name]" class="form-control" placeholder="Enter Word">
    </div>
    <input type="submit" value="Submit!" style="margin:10px;" class="btn">
    <p class="words-message"></p>
  </form>

  <!-- Index all words -->
  <div class="row form-group col-md-6 col-sm-12" style="padding-top:10px;">
    <form id="index">
      <input type="submit" value="View All!" class="btn">
    </form>

    <!-- Hide all words -->
    <form id="delete-index">
      <input type="submit" value="Hide All!" class="btn">
    </form>
  </div>
</section>
